{% extends "base.html.twig" %}

{% block title %}Nouvelle video
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="mt-4">Création d'une vidéo</h1>

		{{ form_start(form) }}

		<div class="form-group">
			{{ form_label(form.title) }}
			{{ form_widget(form.title) }}
			<div class="form-error">
				{{ form_errors(form.title) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.videoLink) }}
			{{ form_widget(form.videoLink) }}
			<div class="form-error">
				{{ form_errors(form.videoLink) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.description) }}
			{{ form_widget(form.description) }}
			<div class="form-error">
				{{ form_errors(form.description) }}
			</div>
		</div>

		<div class="form-group">
				{{ form_widget(form.isPremiumVideo) }}
				{{ form_label(form.isPremiumVideo) }}
				<div class="form-error">
				{{ form_errors(form.isPremiumVideo) }}
			</div>
		</div>

	</div>
    	<div class="form-group">
			{{ form_row(form.submit) }}
		</div>
	{{ form_end(form) }}

	
</div>{% endblock %}
