{% extends 'base.html.twig' %}

{% block title %}Video index{% endblock %}


{% block body %}

<div>
	<div >
		{%  include 'search/_search_data.html.twig'  with {form:form} only  %}
	</div>
	<br>
	<div height="100" whidth="200">
		<h5>

			{% if search == true %}
				{{ totalVideos }}
				video(s) trouv√©e(s) avec le terme
				{{ searchData }}
			{% endif %}
	        <h5>
	</div>

           
        <div class ="row">     
                {% for video in videos %}
        
                <article class ="col-4">     
                <p> {{ video.title }}<p>
                <iframe whidth="300" height"200" src="{{ video.videoLink }}"></iframe> 
                <p> {{ video.description }}</p>
                        <a href="{{ path('app_video_show', {'id': video.id}) }}">show</a>
                        <a href="{{ path('app_video_edit', {'id': video.id}) }}">edit</a>
                </article> 
                
                {% else %}
                
                        <p>no records found</p>
        
                {% endfor %}
        
        </div>  
</div>
<div class=" navigation d-flex justify-content-center mt-4">{{ knp_pagination_render(pagination) }}</div>
			
{% endblock %}
